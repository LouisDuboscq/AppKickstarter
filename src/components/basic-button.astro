---
const { text, url, className } = Astro.props;

---


<a href={url} 
class="gradient-progress">
    <button class="{className} bg-slate-900 hover:bg-slate-800 text-slate-50 font-bold py-2 px-4 rounded lg:px-5 lg:py-2.5 md:px-4 md:py-2
    hover:-translate-y-0.5 hover:scale-105 duration-300 w-full">
        {text}
    </button>
</a>

<style>
@keyframes gradient-progress {
  0% {
    width: 0%;
  }
  100% {
    width: 100%;
  }
}

.progress-container {
  width: 200px;
  height: 10px;
  border-radius: 9999px;
  background-color: #7a2d2d;
  overflow: hidden;
}

.progress-bar {
  height: 100%;
  background: linear-gradient(to right, #ff8a00, #ff2b58, #e52ae3, #8c1eff);
  animation: gradient-progress 5s linear infinite;
}
</style>