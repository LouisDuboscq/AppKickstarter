---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/being-creative.svg";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <img src={heroImage} alt="coding dev illustration"/>
  </div>
  <div>
    <h1
      class="text-4xl lg:text-5xl xl:text-5xl font-bold lg:tracking-tight xl:tracking-tighter">
      Battle-tested app template for Kotlin multiplatform and Firebase
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Quickly create any app with this starter, validate your idea, get users fast, and start monetizing from day 1.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        target="_blank"
        href="https://appkickstarter.lemonsqueezy.com/checkout/buy/699eed0e-fc4a-4784-b3e9-b30e9a979dd7" 
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-rocket" />

        Buy forever for $149
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://www.youtube.com/watch?v=a56Jr2iT-2U&t=5s"
        class="flex gap-1 items-center justify-center" >
        <Icon class="text-black w-4 h-4" name="bx:bx-bookmark" />
        Get started in 2 minutes
      </Link>
    </div>
  </div>
</main>
