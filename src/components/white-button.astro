---
const { text, url, className } = Astro.props;
---

<a href={url}
target="_blank">
    <button class="{className} bg-slate-50 hover:bg-slate-200 text-slate-900 font-bold py-2 px-4 rounded lg:px-5 lg:py-2.5 md:px-4 md:py-2
    hover:-translate-y-0.5 hover:scale-105 duration-300 w-full">
        {text}
    </button>
</a>