               <a rel="noopener noreferrer" href="/documentation/molecules" class={selected == 'molecules' ? ruleselected: rulenotselected} >Molecules</a> 
               <a rel="noopener noreferrer" href="/documentation/organisms" class={selected == 'organisms' ? ruleselected: rulenotselected} >Organisms</a> 
               <a rel="noopener noreferrer" href="/documentation/screens" class={selected == 'screens' ? ruleselected: rulenotselected} >Screens</a> 

               <a rel="noopener noreferrer" href="/documentation/list" class={selected == 'list' ? ruleselected: rulenotselected} >List</a>  
               <a rel="noopener noreferrer" href="/documentation/empty-states" class={selected == 'empty-states' ? ruleselected: rulenotselected} >Empty states</a>  
