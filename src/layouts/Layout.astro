---
import { SEO } from "astro-seo";
import Footer from "@components/footer.astro";
import Navbar from "@components/navbar/navbar.astro";
import "@fontsource/inter/variable.css";

export interface Props {
  title: string;
}

// const { src } = await getImage({
//   src: "../../assets/hero.png",
//   width: 800,
//   height: 742,
//   format: "avif",
// });
// console.log(src);

const canonicalURL = new URL(Astro.url.pathname, Astro.site).toString();

const resolvedImageWithDomain = new URL(
  "/images/affiche_seo.png",
  Astro.site
).toString();

const { title } = Astro.props;

const makeTitle = title
  ? title + " | " + "AppKickstarter"
  : "AppKickstarter - Starter Template for Android and iOS built with Kotlin multiplatform and Firebase";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/business-startup.svg" />
    <meta name="generator" content={Astro.generator} />

    <!-- <link rel="preload" as="image" href={src} alt="Hero" /> -->
    <SEO
      title={makeTitle}
      description="AppKickstarter is a starter template for Android and iOS built with Kotlin multiplatform"
      canonical={canonicalURL}
      twitter={{
        creator: "@louisduboscq",
        site: "https://appkickstarter.com",
        card: "summary_large_image",
      }}
      openGraph={{
        basic: {
          url: canonicalURL,
          type: "website",
          title: `AppKickstarter - Starter Template for Android and iOS`,
          image: resolvedImageWithDomain,
        },
        image: {
          alt: "AppKickstarter landing page screenshot",
        },
      }}
    />
  </head>
  <body>
    <Navbar />
    <slot />

    
    <Footer />
    <style is:global>
      /* Improve Page speed */
      /* https://css-tricks.com/almanac/properties/c/content-visibility/ */
      img {
        content-visibility: auto;
      }
    </style>
  </body>

