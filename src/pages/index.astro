    <script>
      let countdownDate = new Date("June 5, 2023 00:00:00").getTime();

      setInterval(function () {
        let now = new Date().getTime();
        let distance = countdownDate - now;

        let days = Math.floor(distance / (1000 * 60 * 60 * 24));
        let hours = Math.floor(
          (distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60)
        );
        let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        let seconds = Math.floor((distance % (1000 * 60)) / 1000);

        document.getElementById(
          "countdown"
        ).innerHTML = `<p>Lock in your lifetime access now before the price rises to $250 in</p>
           <p>
             <span>${days}</span>d <span>${hours}</span>h 
             <span>${minutes}</span>m <span>${seconds}</span>s
           </p>`;
      }, 1000);
    </script>

