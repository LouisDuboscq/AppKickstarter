const pricing = [
  {
    name: "Developer",
    idealFor: "Access to the template and be part of the community.",
    price: "$200",
    popular: true,
    features: [ 
      "Template",
      "Community",  
      "Exclusive opportunities"
    ],
    button: {
      text: "Get AppKickstarter",
      link: "https://appkickstarter.lemonsqueezy.com/checkout/buy/699eed0e-fc4a-4784-b3e9-b30e9a979dd7?checkout[discount_code]=A5MZA0NW",
    },
  },
  {
    name: "Ultimate Pro",
    idealFor: "Perfect if you're serious about taking your multiplatform app development skills to the next level.",
    price: "$350",/*{
      monthly: "$350",
      annual: "$16",
      discount: "10%",
      original: "$24",
    },*/
    popular: false,
    features: [
      "Developer plan",  
      "GP4 app codebase",
      "Audio app codebase",
      "Offline app codebase"
    ],
    button: {
      text: "Get AppKickstarter and showcases",
      link: "https://appkickstarter.lemonsqueezy.com/checkout/buy/699eed0e-fc4a-4784-b3e9-b30e9a979dd7?checkout[discount_code]=A5MZA0NW",
    },
  },
  {
    name: "On-Demand Support",
    idealFor: "Ask us for specific features in addition to AppKickstarter",
    price: "contact us",/*{
      monthly: "$350",
      annual: "$16",
