---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import Pricing from "@components/pricing.astro";

const pricing = [
  {
    name: "Developer",
    idealFor: "Get the code and start building apps independently. Perfect if you're comfortable working on your own without additional resources or support.",
    price: "$149",
    popular: true,
    features: [
      "Access to the repository",
      "Jetpack Compose UI Kit",
      "Onboarding",
      "Auth screens",
      "Paywall",
      "Data storage", 
      "Lifetime access",
      "Unlimited apps", 
      "Unlimited updates",
    ],
    button: {
      text: "Get Started",
      link: "https://appkickstarter.lemonsqueezy.com/checkout",
    },
  },
  {
    name: "Ultimate Pro",
    idealFor: "Perfect if you're serious about taking your app development skills to the next level.",
    price: "$349",/*{
      monthly: "$349",
      annual: "$16",
      discount: "10%",
      original: "$24",
    },*/
    popular: false,
    features: [
      "Developer plan +",
      "Pro discord server", 
      "Access to courses",
      "Other apps source code" 
    ],
    button: {
      text: "Get Started",
      link: "https://appkickstarter.lemonsqueezy.com/checkout",
    },
  },
  {
    name: "On-Demand Support",
    idealFor: "Ask us for specific features in addition to AppKickstarter",
    price: "contact us",/*{
      monthly: "$349",
      annual: "$16",
      discount: "10%",
      original: "$24",
    },*/
    popular: false,
    features: [
      "On-Demand Support", 
    ],
    button: {
      text: "Contact us",
      link: "/contact",
    },
  },
];
---

<Layout title="Pricing">
  <Container>
    <Sectionhead>
      <Fragment slot="title">Pricing</Fragment>
      <Fragment slot="desc">Get lifetime access to our private Github team for updates, and join our Discord community for support and help as you build your app. Additionally, gain access to our library of courses, as well as the source code of multiple apps built with AppKickstarter.</Fragment>
    </Sectionhead> 
    <div class="grid md:grid-cols-3 gap-5 mx-auto max-w-4xl mt-12">
      {pricing.map((item) => <Pricing plan={item} />)}
    </div>
  </Container>
</Layout>
