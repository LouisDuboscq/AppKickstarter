{ 
  "tabWidth": 2,
  "useTabs": false,
  "bracketSameLine": true,
  "printWidth": 100,
  "semi": true,
  "singleQuote": true, 
  "trailingComma": "es5", 
  "overrides": [
    {
      "files": [".*", "*.json", "*.md", "*.mdx", "*.toml", "*.yml"],
      "options": {
        "useTabs": false
      }
    },
    {
      "files": ["**/*.astro"],
      "options": {
        "parser": "astro"
      }
    }
  ]
}
